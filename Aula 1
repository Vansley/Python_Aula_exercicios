a = int(input ('entre com o primeiro valor: '))
b = int(input('entre com o segundo valor:' ))
print(type (a))
soma = a + b
subtracao = a - b
multiplicacao = a * b
divisao = a / b
resto = a % b
resultado =('soma: {soma}. \nsubtracao: {subtracao}.'
       '\nmultiplicacao: {multiplicacao}.'
       '\ndivisao: {divisao}.'
       '\nresto: {resto}.'.format(soma=soma,
                                  subtracao = subtracao,
                                  multiplicacao = multiplicacao,
                                  divisao = divisao,
                                  resto = resto))
print (resultado)
